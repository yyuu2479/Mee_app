<div class="container my-5">
  <div class="mee-password-forget col-md-5 mx-auto shadow p-5">
    <h2>パスワードをお忘れですか？</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "sample@exsample.com", class: 'form-control' %>
      </div>

      <div class="actions">
        <%= f.submit "パスワードの再設定方法を送信する", class: 'btn btn-secondary' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
