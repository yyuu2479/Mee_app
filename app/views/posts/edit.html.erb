<% provide(:title, "投稿")%>
<div class="container my-5">
  <div class="mee-post col-sm-10 col-lg-6 mx-auto shadow p-5">
    <h3><i class="fas fa-edit text-secondary"></i> 投稿編集ページ</h3>
    <!--編集した内容を送信する-->
    <%= form_with model: @post, local: true do |f| %>
      <div class="form-group">
        <%= f.label :title, '投稿タイトル' %>
        <%= f.text_field :title, class: 'form-control w-75' %>
      </div>
      <div class="form-group">
        <%= f.label :image, '投稿画像' %>
        <%= f.attachment_field :image, class: 'form-control-file' %>
      </div>
      <div class="form-group">
        <%= f.label :body, '投稿本文(350字まで)' %>
        <%= f.text_area :body, class: 'form-control', id: 'input-text', size: '30x10' %>
        <p class="text-right" id="counter">残り350文字</p>
      </div>
      <div>
        <%= f.submit '更新する', class: 'btn btn-outline-success' %>
      </div>
    <% end %>
  </div>
</div>
