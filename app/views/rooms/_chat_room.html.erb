  <!--相互フォローだったらチャットルームを作成-->
  <% if current_user.following_user?(user) && user.following_user?(current_user)%>
    <!--既にチャットルームが作成されているかどうかで処理を分岐-->
    <% if is_room == true %>
      <%= link_to 'チャットルームへ', room_path(room_id), class: 'fas fa-door-open btn btn-light p-2 mb-2' %>
    <% else %>
      <%= form_with model: room, local: true do |f| %>
        <%= fields_for entry do |e|%>
          <%= e.hidden_field :user_id, value: user.id %>
        <% end %>
        <%= f.submit 'チャットを始める', class: 'fas fa-door-open btn btn-light p-2 mb-2'%>
      <% end %>
    <% end %>
  <% end %>
