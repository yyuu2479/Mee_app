<% if is_room == true %>
  <!--既にチャットルームが存在していれば存在しているチャットルームへ-->
  <p><%= link_to 'チャットルームへ', room_path(room_id), class: 'btn btn-light' %></p>
<% else %>
  <!--チャットルームを新規作成-->
  <%= form_with model: room, local: true do |f| %>
    <%= fields_for entry do |e|%>
      <%= e.hidden_field :user_id, value: user.id %>
    <% end %>
    <p><%= f.submit 'チャットを始める', class: 'btn btn-light mb-2'%></p>
  <% end %>
<% end %>