<div class="container">
  <h3>ユーザー一覧</h3>
  <div class="row">
  <% @users.each do |user| %>
    <div class="col-md-3 text-center">
      <%= link_to user_path(user.id), class: 'text-decoration-none' do %>
        <%= attachment_image_tag user, :image, size: '150x150', format: 'jpeg', fallback: 'no_image.jpeg' %>
        <p class="text-left"><%= user.nickname %></p>
      <% end %>
    </div>
  <% end %>
  </div>
  </div>
</div>
