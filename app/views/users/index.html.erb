<div class="container my-5">
  <h3>ユーザー一覧</h3>
  <!--ソート機能-->
  <div class="form-group">
    <%= form_with url: users_path, method: :get, local: true do |f| %>
      <%= f.select :sort, options_for_select({'登録日時が新しい順'=>'new', '登録日時が古い順'=>'old'}), class: 'form-control' %>
      <%= f.submit '検索', class: 'btn btn-light' %>
    <% end %>
  </div>
  <!--ユーザー一覧部分-->
  <div class="row">
    <% @users.each do |user| %>
      <div class="col-md-4 text-center">
        <div class="card border-dark mb-3">
          <%= link_to user_path(user.id), class: 'text-decoration-none' do %>
            <%= attachment_image_tag user, :image, size: '350x350', format: 'jpeg', fallback: 'no_image.jpeg', class: 'bd-placeholder-img card-img-top' %>
            <p class="text-left text-body card-header"><%= user.nickname %></p>
          <% end %>
          <div class="card-body">
            <p class="text-right card-text"><%= time_ago_in_words(user.created_at).upcase %>前</p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

