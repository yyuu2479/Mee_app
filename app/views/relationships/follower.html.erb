<% provide(:title, "フォロワ一覧")%>
<div class="container my-5 relationships">
  <h3 class="font-weight-bold">フォロワー一覧 (<%= @followers.count %>フォロワー)</h3>
  <div class="row">
    <% @followers.each do |follower|%>
      <div class="col-6 col-md-3 text-center">
        <%= link_to user_path(follower), class: 'text-decoration-none' do %>
          <%= attachment_image_tag follower, :image, size: '150x150', format: 'jpeg', fallback: asset_path('no_image2.jpeg') %>
          <p class="text-dark"><%= follower.nickname %></p>
        <% end %>
      </div>
    <% end %>
  </div>
  <%= paginate @followers %>
</div>