<% provide(:title, "フォロワ一覧")%>
<div class="container my-5 relationships">
  <h3 class="font-weight-bold">フォロワー一覧</h3>
  <div class="row">
    <% @followers.each do |follower|%>
      <div class="col-md-3 text-center">
        <!--ユーザー詳細ページへのリンク-->
        <%= link_to user_path(follower), class: 'text-decoration-none' do %>
          <!--プロフ画像-->
          <%= attachment_image_tag follower, :image, size: '150x150', format: 'jpeg', fallback: 'no_image2.jpeg' %>
          <!--ユーザー名(ニックネーム)-->
          <p class="text-dark"><%= follower.nickname %></p>
        <% end %>
      </div>
    <% end %>
  </div>
  <%= paginate @followers %>
</div>