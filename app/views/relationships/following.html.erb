<div class="container">
  <h3>フォロー一覧</h3>
  <div class="row">
    <% @followings.each do |following|%>
      <div class="col-md-3 text-center">
        <!--ユーザー詳細ページへのリンク-->
        <%= link_to user_path(following), class: 'text-decoration-none' do%>
          <!--プロフ画像-->
          <%= attachment_image_tag following, :image, size: '150x150', format: 'jpeg', fallback: 'no_image.jpeg'%>
          <!--ユーザー名(ニックネーム)-->
          <p><%= following.nickname %></p>
        <% end %>
      </div>
    <% end %>
  </div>
</div>