<% results.each do |user| %>
  <div class="col-sm-6 col-lg-4 my-1">
    <div class="card border-dark mb-3">
      <!--画像部分-->
      <div class="users1">
        <%= link_to user_path(user.id), class: 'text-decoration-none' do %>
          <%= attachment_image_tag user, :image, size: '350x350', format: 'jpeg', fallback: asset_path('no_image2.jpeg'), class: 'bd-placeholder-img card-img-top' %>
          <div class="mask1">
            <div class="caption1">ユーザー詳細ページへ！！</div>
          </div>
        <% end %>
      </div>
      <!--ユーザーニックネーム-->
      <p class="text-left text-body card-header"><%= user.nickname %></p>
      <div class="card-body">
        <% if user.introduction.blank? %>
          <p class="text-truncate text-left card-text">自己紹介を設定しよう！！</p>
        <% else %>
          <p class="text-truncate text-left card-text"><%= user.introduction %></p>
        <% end %>
        <!--登録日時-->
        <p class="text-right card-text"><%= time_ago_in_words(user.created_at).upcase %>前</p>
        <!--詳細ページボタン-->
        <%= link_to user_path(user.id), class: 'text-decoration-none' do %>
          <p class="font-weight-bold text-dark text-right">詳細ページへ！<i class="fas fa-angle-double-right"></i></p>
        <% end %>
      </div>
    </div>
  </div>
<% end %>