<% results.each do |user| %>
  <div class="col-md-4">
    <div class="card border-dark mb-3">
      <%= link_to user_path(user.id), class: 'text-decoration-none' do %>
        <%= attachment_image_tag user, :image, size: '350x350', format: 'jpeg', fallback: 'no_image2.jpeg', class: 'bd-placeholder-img card-img-top' %>
        <p class="text-left text-body card-header"><%= user.nickname %></p>
      <% end %>
      <div class="card-body">
        <p class="text-right card-text"><%= time_ago_in_words(user.created_at).upcase %>前</p>
      </div>
    </div>
  </div>
<% end %>