<% results.each do |post| %>
  <div class="col-lg-12 my-1 pb-2">
    <div class="card border-dark">
      <div class="row no-gutters">
        <div class="col-sm-5 posts2">
          <%= link_to post_path(post.id) do%>
            <%= attachment_image_tag post, :image, size: '350x350', fallback: asset_path('no_image2.jpeg'), format: 'jpeg', class: 'card-img-top' %>
            <div class="mask2">
              <div class="caption2">投稿詳細ページへ！！</div>
            </div>
          <% end %>
        </div>
        <div class="col-sm-7">
          <h5 class="card-header"><%= post.title %></h5>
          <div class="text-left card-body">
            <div id="like_btn_<%= post.id%>" class="text-right">
              <%= render 'likes/like_btn', post: post  %>
            </div>
            <p class="text-truncate card-subtitle mb-2 text-muted"><%= post.genre.name %></p>
            <p class="text-break card-text"><%= safe_join(post.body.split("\n"), tag(:br)) %></p>
            <p class="text-right"><%= time_ago_in_words(post.created_at).upcase %>前</p>
            <%= link_to post_path(post.id), class: 'text-decoration-none' do %>
              <p class="font-weight-bold text-dark text-right card-text">詳細ページへ！<i class="fas fa-angle-double-right"></i></p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
